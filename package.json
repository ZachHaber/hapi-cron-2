{
	"name": "hapi-cron-2",
	"type": "module",
	"version": "1.0.1",
	"description": "A Hapi plugin to setup cron jobs that will call predefined server routes at specified times",
	"scripts": {
		"test": "npm run lint && npm run jest",
		"lint": "biome ci .",
		"jest": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
		"prepare": "lefthook install",
		"prepublishOnly": "tsc"
	},
	"exports": { "import": "./dist/index.js" },
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zachhaber/hapi-cron-2.git"
	},
	"keywords": ["hapi", "plugin", "cron"],
	"author": "ZachHaber",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/zachhaber/hapi-cron-2/issues"
	},
	"homepage": "https://github.com/zachhaber/hapi-cron-2#readme",
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@hapi/hapi": "^21.3.3",
		"@jest/globals": "^29.7.0",
		"@types/node": "^20.11.16",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"jest": "^29.7.0",
		"joi": "^17.12.1",
		"lefthook": "^1.6.1",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@hapi/hoek": "^11.0.4",
		"cron": "^3.1.6"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"files": ["dist", "LICENSE", "README.md"],
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
